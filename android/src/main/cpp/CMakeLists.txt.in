cmake_minimum_required(VERSION 3.7)
project(@PACKAGE_NAME@-Android-${ANDROID_ABI})

add_library(ncine SHARED IMPORTED)
set_property(TARGET ncine PROPERTY IMPORTED_LOCATION "${CMAKE_SOURCE_DIR}/ncine/${ANDROID_ABI}/libncine.so")
set_property(TARGET ncine PROPERTY INTERFACE_INCLUDE_DIRECTORIES "${CMAKE_SOURCE_DIR}/ncine/include")

set(SOURCES
@ANDROID_PACKAGE_SOURCES@
)

add_library(native_app_glue STATIC ${ANDROID_NDK}/sources/android/native_app_glue/android_native_app_glue.c)
target_link_libraries(native_app_glue PRIVATE android log)
add_library(game SHARED main.cpp ${SOURCES})
target_link_libraries(game PRIVATE ncine native_app_glue)
target_include_directories(game PRIVATE @NCPONG_INCLUDE_DIR@ ${ANDROID_NDK}/sources/android/native_app_glue)

# Export ANativeActivity_onCreate() - https://github.com/android-ndk/ndk/issues/381
set_property(TARGET game APPEND_STRING PROPERTY LINK_FLAGS "-u ANativeActivity_onCreate")
